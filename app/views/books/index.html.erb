<!DOCTYPE html>
<html lang="ja">
  <head>
    <title>WebCampBackendNew</title>
    <meta charset="UTF-8">
    <link rel="stylesheet" media="all" href="assets/stylesheets/application.css">
  </head>

  <body>
    <h1>Books</h1>

  <% @book.each do |book| %>
    <table>
      <thead>
        <tr>
          <th>Title</th>
          <th>Body</th>
          <th colspan="3"></th>
        </tr>
      </thead>

    </table>
  <% end %>

    <h2>New book</h2>
    <%= form_with model:@book, url:'/books', methood: :post do |f| %>
    <div class="title">
      <p class="title-text">Title</p>
      <%= f.text_field:title %>
    </div>

    <div class="body">
      <p class="body-text">Body</p>
      <%= f.text_area:body %>
    </div>
    <div class="create"><%= f.submit 'Create Book' %></div>
  <% end %>

  </body>
</html>